        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="r_shoulder_abduction_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="r_shoulder_abduction_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="r_shoulder_abduction_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="r_shoulder_rotation_transmission">
      <type>transmission_interface/SimpleTransmission</type>
