        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="r_elbow_flection_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="r_forearm_pronation_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="r_forearm_pronation_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="r_forearm_pronation_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="r_wrist_abduction_transmission">
