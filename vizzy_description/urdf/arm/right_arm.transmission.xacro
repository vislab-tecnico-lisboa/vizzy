      <joint name="r_wrist_abduction_virtual_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="r_wrist_abduction_virtual_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <transmission name="r_wrist_flection_transmission">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="r_wrist_flection_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="r_wrist_flection_motor">
